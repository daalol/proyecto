<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#a6c53b" >

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/bebidas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Bebidas" />

        <RadioButton
            android:id="@+id/refrescos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refrescos" />

        <RadioButton
            android:id="@+id/cervezas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cervezas" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/radioGroup1"
        android:text="Bebidas/granizados:"
        android:visibility="visible" />

    <Spinner
        android:id="@+id/spinnerBebidas"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerBebidas"
        android:text="Elige el tamaño:" />

    <Spinner
        android:id="@+id/spinnerTamaño"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView4"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/spinnerTamaño"
        android:text="Refrescos:                        "
        android:visibility="invisible" />

    <Spinner
        android:id="@+id/spinnerRefrescos"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/spinnerRefrescos"
        android:text="Cervezas"
        android:visibility="invisible" />

    <Spinner
        android:id="@+id/spinnerCervezas"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView3"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/cantidad"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView2"
        android:layout_below="@+id/spinnerCervezas"
        android:layout_toRightOf="@+id/textView5"
        android:ems="10"
        android:inputType="number"
        android:text="1" />

    
    <Button
        android:id="@+id/añadir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/cantidad"
        android:text="Añadir" />

    <Button
        android:id="@+id/cancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/spinnerCervezas"
        android:layout_below="@+id/cantidad"
        android:layout_toRightOf="@+id/añadir"
        android:text="Cancelar" />
    

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cantidad"
        android:layout_alignBottom="@+id/cantidad"
        android:layout_alignParentLeft="true"
        android:text="Cantidad:" />

</RelativeLayout> 
